<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %thread %level %logger{15} %msg%n</pattern>-->
            <pattern>* %-20(%cyan(%date{MM-dd HH:mm:ss.SSS}) [%thread] [traceId=%X{traceId}][sessionId=%X{sessionId}][userId=%X{userId}][txId=%X{txId}][tx-propagation=%X{tx-propagation}][tx-isolation=%X{tx-isolation}][tx-status=%X{tx-status}]) %highlight(%-5level) %magenta(%marker|%logger{36}): %msg%n%rEx</pattern>
        </layout>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
<!--    <logger name="org.springframework.web" level="DEBUG"/>-->
<!--    <logger name="org.springframework.data" level="DEBUG"/>-->
    <logger name="com.hanghae.commerce" level="DEBUG"/>
    <logger name="org.springdoc" level="DEBUG"/>
<!--    <logger name="org.hibernate.stat" level="DEBUG"/>-->
</configuration>
